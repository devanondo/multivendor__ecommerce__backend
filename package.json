    },
    "lint-staged": {
        "src/**/*.ts": "yarn lint-prettier"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
